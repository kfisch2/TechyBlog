<article>
  <a href='/dashboard'> &larr; Back to dashboard</a>
  <h3>
    Edit Post
  </h3>
  <form class='edit-post-form'>
    <div>
      <input name='post-title' type='text' value='{{post.title}}' />
      <span>Change title</span>
    </div>
  <br>
    <div>
      <textarea name="text_content">{{post.post_text}}</textarea>
      <span>Edit content</span>
    </div>
    <div>
      
    </div>


    <div>
      by you on 
      {{format_date post.created_at}}
      |
      <a href='/post/{{post.id}}'>{{post.comments.length}}
        {{format_plural 'comment' post.comments.length}}</a>
    </div>
    <button type='submit' class="save-post-btn btn">Save post</button>
    <button type='button' class='delete-post-btn btn'>Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn">add comment</button>
  </div>
</form>

{{> comments post.comments }}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>