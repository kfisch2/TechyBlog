<h2>{{user.username}}</h2>

{{!-- {{#if posts.length}} --}}
<section class="col m7">
  <h4>Your Posts</h4>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{!-- {{/if}} --}}

<section class="col m5"> 
<h4>Create a new post</h4>

<form class="new-post-form">

    <div class='row'>
      <div class='input-field col s6'>
        <input id='post-title' type='text' />
        <label for='post-title'>Title</label>
      </div>
    </div>


  {{!-- NEEDS TO BE A TEXT BOX --}}
